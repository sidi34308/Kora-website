datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  phoneNumber     String   @unique
  role            String   
  Password        String
  registeredGames String[]
}

model Organizer {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  phoneNumber     String   @unique
  Password        String
    role            String? 
  organizedGames  String[]
}

model Game {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  fieldLocation    String
  locationId       String?
  duration         Int?
  title            String?
  dateTime         DateTime
  numberOfTeams    Int?
  skillLevel       String
  maxPlayers       Int
  feesPerPerson    Int  
  registeredPlayers String[]
  organizerId      String   @db.ObjectId
}
